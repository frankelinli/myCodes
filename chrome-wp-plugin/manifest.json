{
  "manifest_version": 3,
  "name": "WordPress会员验证插件",
  "version": "1.0.0",
  "description": "验证haoyelaiga.com的WordPress会员身份，只有会员才能使用特定功能",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "host_permissions"
  ],
  "host_permissions": [
    "https://haoyelaiga.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WordPress会员验证",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}